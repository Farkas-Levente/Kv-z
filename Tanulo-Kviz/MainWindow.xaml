            <Button Name="kovetkezo" Content="Következő" HorizontalAlignment="Left" Margin="1542,848,0,0" VerticalAlignment="Top" Width="176" Height="78" Click="Kovetkezo_Oldal" FontSize="24" RenderTransformOrigin="0.295,1.396"/>
            <Button Name="oldal_1" Content="" HorizontalAlignment="Left" Margin="226,870,0,0" VerticalAlignment="Top" Width="96" Height="34" Click="oldal_1_Click" RenderTransformOrigin="2.263,-0.868"/>
