            <Viewbox Height="36" Margin="-6,297,6,86">
                <RadioButton GroupName="Valasz" x:Name="valasz4" Content="Válasz 4" Width="745" Checked="Valasz4_Checked"></RadioButton>
            </Viewbox>


            <Button x:Name="kilepes" Content="Kilépés" HorizontalAlignment="Left" Margin="719,356,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden" Click="kilep"/>

            <Label x:Name="oladalJelzo" Content="1/10" HorizontalContentAlignment="Center" Margin="786,773,910,0" VerticalAlignment="Top" FontSize="24" Height="50"/>
