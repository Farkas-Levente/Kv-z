<Window x:Class="Tanulo_Kviz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tanulo_Kviz"
        mc:Ignorable="d"
        Title="Tanulás ellenőrző kvíz" Height="450" Width="800">
    <Grid>
        <Label Content="Válaszd ki a kvíz témáját:" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Tantárgy:" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Matematika"/>
            <ComboBoxItem Content="Fizika"/>
            <ComboBoxItem Content="Informatika"/>
            <ComboBoxItem Content="Történelem"/>
            <ComboBoxItem Content="Irodalom"/>
        </ComboBox>
        <Label Content="Témakör" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Feladatok generálása" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Width="160" Height="70"/>

    </Grid>
</Window>
