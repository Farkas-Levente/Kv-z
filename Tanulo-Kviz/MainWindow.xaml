            <Button Name="oldal_6" Content="" HorizontalAlignment="Left" Margin="904,870,0,0" VerticalAlignment="Top" Width="96" Height="34" Click="oldal_6_Click"/>
            <Button Name="oldal_5" Content="" HorizontalAlignment="Left" Margin="756,870,0,0" VerticalAlignment="Top" Width="96" Height="34" Click="oldal_5_Click"/>
            <Button Name="oldal_4" Content="" HorizontalAlignment="Left" Margin="618,870,0,0" VerticalAlignment="Top" Width="98" Height="34" Click="oldal_4_Click"/>
            <Button Name="oldal_3" Content="" HorizontalAlignment="Left" Margin="469,870,0,0" VerticalAlignment="Top" Width="96" Height="34" Click="oldal_3_Click"/>
            <Button x:Name="kiertekelesGomb" Content="Végkiértékelés" HorizontalAlignment="Left" Margin="1542,754,0,0" VerticalAlignment="Top" Width="170" Click="kiertekeles" Height="50" FontSize="24"/>



        </Grid>
    </Grid>
</Window>

